@page
@model ViccAdatbazis.Pages.ListJokesModel

@{
    ViewData["Title"] = "ListJokes";
}

<h1>ListJokes</h1>

<p>
    <a asp-page="/CreateJokes">Új vicc hozzáadása</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tartalom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Feltolto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tetszik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].NemTetszik)
            </th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vicc)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tartalom)</td>
                <td>@Html.DisplayFor(modelItem => item.Feltolto)</td>
                <td id="like-count-@item.Id">@item.Tetszik</td>
                <td id="dislike-count-@item.Id">@item.NemTetszik</td>
                <td>
                    <button class="btn btn-success" onclick="addLike(@item.Id)">👍 Like</button>
                    <button class="btn btn-danger" onclick="addDislike(@item.Id)">👎 Dislike</button>
                </td>
                <td>
                    <a asp-page="./EditJokes" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./DetailsJoke" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./DeleteJokes" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript">
        function addLike(jokeId) {
            $.ajax({
                type: "PUT",
                url: `/api/jokes/${jokeId}/like`,
                success: function (response) {
                    $(`#like-count-${jokeId}`).text(response.likes);
                },
                error: function () {
                    alert("Error updating like count.");
                }
            });
        }

        function addDislike(jokeId) {
            $.ajax({
                type: "PUT",
                url: `/api/jokes/${jokeId}/dislike`,
                success: function (response) {
                    $(`#dislike-count-${jokeId}`).text(response.dislikes);
                },
                error: function () {
                    alert("Error updating dislike count.");
                }
            });
        }
    </script>
}
